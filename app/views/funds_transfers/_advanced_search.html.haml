= search_form_for @searcher, {defaults: local_assigns[:defaults]} do |f|
  = f.standard_fields
  - if current_user.present? && current_user.try(:accessible_customers).try(:count) != 1
    = f.input :customer_id
  = f.input :transfer_type, as: :enum
  = f.input :status_code, as: :enum
  = f.input :req_timestamp, as: :between
  = f.input :transfer_amount, as: :between
  = f.input :req_no
  = f.input :debit_account_no
  = f.input :bene_account_ifsc
  = f.input :optn_name, as: :enum
  = f.input :ws_saf, as: :enum

  = f.action_buttons
%br

= "Total Count: #{@records.count}"
= will_paginate @records, :page_links => true
%h2.collapsible
  Advanced Search
  %span.caret
.collapsible-content
  = form_tag ft_saf_transfers_path, :method => :put, :class => 'form-horizontal', :autocomplete=>"off", id: 'advanced_search' do
    .control-group
      = label_tag "App UUID", "App UUID", :class => 'control-label'
      = text_field_tag :app_uuid, params[:app_uuid]
    .control-group
      = label_tag "Customer ID", "Customer ID", :class => 'control-label'
      = text_field_tag :customer_id, params[:customer_id]
    .control-group
      = label_tag "Request No", "Request No", :class => 'control-label'
      = text_field_tag :req_no, params[:req_no]
    .control-group
      = label_tag "Operation Name", "Operation Name", :class => 'control-label'
      = select_tag :op_name, options_for_select([['startTransfer','startTransfer'],['transfer','transfer']], params[:op_name]),:prompt => 'Select'
    .control-group
      = label_tag "Status", "Status", :class => 'control-label'
      = select_tag :status, options_for_select([['NEW','NEW'],['FAILED','FAILED']],params[:status]),:prompt => 'Select'
    .control-group
      = label_tag "Request Transfer Type", "Request Transfer Type" , :class => 'control-label'
      = select_tag :req_transfer_type, options_for_select([['NEFT','NEFT'],['IMPS','IMPS'],['RTGS','RTGS'],['FT','FT'],['APBS','APBS'] ],params[:req_transfer_type]),:prompt => 'Select'
    .control-group
      = label_tag "Request Timestamp", "Request Timestamp", :class => 'control-label'
      = text_field_tag :from_request_timestamp, params[:from_request_timestamp]
      To
      = text_field_tag :to_request_timestamp, params[:to_request_timestamp]
    .control-group
      = label_tag "Reply Timestamp", "Reply Timestamp", :class => 'control-label'
      = text_field_tag :from_reply_timestamp, params[:from_reply_timestamp]
      To
      = text_field_tag :to_reply_timestamp, params[:to_reply_timestamp]
      
    = hidden_field_tag :page, params[:page] || 1
    .form-actions
      = submit_tag "Search", :name => nil, :class => 'btn btn-primary', :id => "adv_search_button",onclick: "$('#page').val(1)"
      = button_tag "Reset", :type => 'button', :value=>'Reset', :class => 'btn', :id => 'adv_search_reset_button'

= advanced_search_page_links
